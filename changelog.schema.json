{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Changelog Data",
    "type": "object",
    "required": [
        "changes"
    ],
    "properties": {
        "changes": {
            "type": "array",
            "minItems": 0,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "date",
                    "title",
                    "description"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Unique identifier"
                    },
                    "date": {
                        "type": "string",
                        "pattern": "^[A-Z]+ \\d+( \\d{4})?$",
                        "description": "Date format 'MONTH DAY [YEAR]' (e.g. 'JANUARY 20 2024')"
                    },
                    "title": {
                        "type": "string",
                        "minLength": 10,
                        "maxLength": 200,
                        "description": "Changelog item title"
                    },
                    "description": {
                        "type": "string",
                        "maxLength": 2000,
                        "description": "Description of the changelog item"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "minItems": 1,
                        "maxItems": 5,
                        "description": "Optional tags for the changelog item"
                    }
                }
            }
        }
    }
}